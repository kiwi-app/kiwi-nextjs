{
  "exclude": [
    "node_modules",
    "build",
    "**.spec.js"
  ],
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "rootDir": ".",
    "jsx": "react-jsx",
    "declaration": true,
    "declarationDir": "types",
    "sourceMap": true,
    "outDir": "build",
    "moduleResolution": "Node",
    "allowSyntheticDefaultImports": true
  }
}